{% comment %}
  Snippet: Product Card Riocapria
  Renders a product card with 3 image hover effect, rating stars, and price

  Accepts:
  - product: {Object} Product object
  - show_vendor: {Boolean} Show vendor name
  - show_rating: {Boolean} Show product rating
  - show_badge: {Boolean} Show sale/new badges
  - lazy_load: {Boolean} Enable lazy loading
  - section_id: {String} Section ID for JS targeting
{% endcomment %}

{%- liquid
  assign show_vendor = show_vendor | default: false
  assign show_rating = show_rating | default: true
  assign show_badge = show_badge | default: true
  assign lazy_load = lazy_load | default: true

  assign featured_image = product.featured_image
  assign second_image = product.images[1] | default: nil
  assign third_image = product.images[2] | default: nil

  assign on_sale = false
  if product.compare_at_price > product.price
    assign on_sale = true
  endif

  assign sold_out = true
  if product.available
    assign sold_out = false
  endif
-%}

<div class="product-card-riocapria">
  <a href="{{ product.url }}" class="product-card__link">
    <div class="product-card__image-wrapper">
      <div class="product-card__image-container">
        {%- if show_badge -%}
          {%- if on_sale and sold_out == false -%}
            <span class="product-card__badge product-card__badge--sale">
              {%- assign sale_percentage = product.compare_at_price | minus: product.price | times: 100.0 | divided_by: product.compare_at_price | round -%}
              {{ sale_percentage }}% OFF
            </span>
          {%- elsif sold_out -%}
            <span class="product-card__badge product-card__badge--sold-out">
              {{ 'products.product.sold_out' | t }}
            </span>
          {%- endif -%}
        {%- endif -%}

        <button type="button" class="product-card__button-hover">
          {{ 'products.product.view_details' | t | default: 'Ver Detalhes' }}
        </button>

        {%- if featured_image -%}
          <img
            class="product-card__image product-card__image--primary"
            src="{{ featured_image | image_url: width: 500 }}"
            alt="{{ featured_image.alt | escape }}"
            {% if lazy_load %}loading="lazy"{% endif %}
            width="500"
            height="500"
          >
        {%- else -%}
          {{ 'product-1' | placeholder_svg_tag: 'product-card__image product-card__image--primary placeholder-svg' }}
        {%- endif -%}

        {%- if second_image -%}
          <img
            class="product-card__image product-card__image--secondary"
            src="{{ second_image | image_url: width: 500 }}"
            alt="{{ second_image.alt | escape }}"
            {% if lazy_load %}loading="lazy"{% endif %}
            width="500"
            height="500"
          >
        {%- endif -%}

        {%- if third_image -%}
          <img
            class="product-card__image product-card__image--tertiary"
            src="{{ third_image | image_url: width: 500 }}"
            alt="{{ third_image.alt | escape }}"
            {% if lazy_load %}loading="lazy"{% endif %}
            width="500"
            height="500"
          >
        {%- endif -%}
      </div>
    </div>

    <div class="product-card__info">
      {%- if show_rating -%}
        <div class="product-card__rating">
          {% render 'rating-stars', rating: 4.5 %}
        </div>
      {%- endif -%}

      {%- if show_vendor -%}
        <span class="product-card__vendor">{{ product.vendor }}</span>
      {%- endif -%}

      <h3 class="product-card__title">{{ product.title | truncate: 50 }}</h3>

      <div class="product-card__price">
        {%- if on_sale -%}
          <span class="product-card__price--compare">
            {{ product.compare_at_price | money }}
          </span>
        {%- endif -%}
        <span class="product-card__price--current{% if on_sale %} product-card__price--on-sale{% endif %}">
          {{ product.price | money }}
        </span>
      </div>

      {%- if product.price > 0 -%}
        <div class="product-card__installments">
          {%- assign installment_value = product.price | divided_by: 5.0 -%}
          Ã  vista ou 5x de {{ installment_value | money }}
        </div>
      {%- endif -%}
    </div>
  </a>
</div>

<style>
  .product-card-riocapria {
    position: relative;
    background: #fff;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .product-card-riocapria:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .product-card__link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .product-card__image-wrapper {
    position: relative;
    padding-bottom: 100%;
    overflow: hidden;
    background: #f7f7f7;
  }

  .product-card__image-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .product-card__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.5s ease, transform 0.5s ease;
  }

  .product-card__image--primary {
    z-index: 1;
  }

  .product-card__image--secondary {
    z-index: 2;
    opacity: 0;
  }

  .product-card__image--tertiary {
    z-index: 3;
    opacity: 0;
  }

  .product-card-riocapria:hover .product-card__image--primary {
    transform: scale(1.05);
  }

  .product-card-riocapria:hover .product-card__image--secondary {
    opacity: 1;
    animation: fadeInOut 2s ease-in-out;
  }

  .product-card-riocapria:hover .product-card__image--tertiary {
    opacity: 1;
    animation: fadeInOut 2s ease-in-out 0.5s;
  }

  @keyframes fadeInOut {
    0%, 100% { opacity: 0; }
    50% { opacity: 1; }
  }

  .product-card__badge {
    position: absolute;
    top: 12px;
    left: 12px;
    z-index: 10;
    padding: 4px 8px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    border-radius: 4px;
  }

  .product-card__badge--sale {
    background: var(--color-coral, #fd3558);
    color: white;
  }

  .product-card__badge--sold-out {
    background: #666;
    color: white;
  }

  .product-card__button-hover {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%) translateY(100px);
    z-index: 10;
    padding: 12px 24px;
    background: white;
    color: var(--color-foreground);
    border: 1px solid var(--color-foreground);
    border-radius: 25px;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    opacity: 0;
  }

  .product-card-riocapria:hover .product-card__button-hover {
    transform: translateX(-50%) translateY(0);
    opacity: 1;
  }

  .product-card__button-hover:hover {
    background: var(--color-foreground);
    color: white;
  }

  .product-card__info {
    padding: 16px;
  }

  .product-card__rating {
    display: flex;
    align-items: center;
    margin-bottom: 8px;
  }

  .product-card__vendor {
    display: block;
    font-size: 12px;
    color: #666;
    margin-bottom: 4px;
  }

  .product-card__title {
    margin: 0 0 8px;
    font-size: 16px;
    font-weight: 500;
    line-height: 1.3;
    color: var(--color-foreground);
  }

  .product-card__price {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 4px;
  }

  .product-card__price--compare {
    font-size: 14px;
    color: #999;
    text-decoration: line-through;
  }

  .product-card__price--current {
    font-size: 18px;
    font-weight: 600;
    color: var(--color-foreground);
  }

  .product-card__price--on-sale {
    color: var(--color-coral, #fd3558);
  }

  .product-card__installments {
    font-size: 12px;
    color: #666;
  }

  @media screen and (max-width: 749px) {
    .product-card__title {
      font-size: 14px;
    }

    .product-card__price--current {
      font-size: 16px;
    }

    .product-card__info {
      padding: 12px;
    }
  }
</style>