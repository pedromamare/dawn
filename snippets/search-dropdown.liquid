{% comment %}
  Search Dropdown - Riocapria
  Modal de busca simples e funcional
{% endcomment %}

<div class="search-dropdown-wrapper">
  <button type="button" class="search-toggle" aria-label="Abrir busca">
    <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
      <path d="M9 17A8 8 0 1 0 9 1a8 8 0 0 0 0 16zM18 18l-4.35-4.35" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </button>

  <div class="search-dropdown" hidden>
    <div class="search-dropdown__overlay"></div>
    <div class="search-dropdown__content">
      <div class="search-dropdown__header">
        <h2>Buscar Produtos</h2>
        <button type="button" class="search-close">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
            <path d="M18 6L6 18M6 6l12 12" stroke="currentColor" stroke-width="2"/>
          </svg>
        </button>
      </div>

      <form action="{{ routes.search_url }}" method="get" class="search-form">
        <input type="search" name="q" placeholder="Digite o que você procura..." required>
        <button type="submit">Buscar</button>
      </form>

      <div class="search-suggestions">
        <h3>Sugestões</h3>
        <a href="/collections/aneis">Anéis</a>
        <a href="/collections/brincos">Brincos</a>
        <a href="/collections/colares">Colares</a>
        <a href="/collections/pulseiras">Pulseiras</a>
        <a href="/collections/outlet">Outlet</a>
      </div>
    </div>
  </div>
</div>

<style>
.search-toggle {
  background: none;
  border: none;
  padding: 0.5rem;
  cursor: pointer;
  color: currentColor;
}

.search-dropdown {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: 1000;
}

.search-dropdown[hidden] {
  display: none;
}

.search-dropdown__overlay {
  position: absolute;
  inset: 0;
  background: rgba(0,0,0,0.5);
}

.search-dropdown__content {
  position: relative;
  background: white;
  width: 90%;
  max-width: 600px;
  margin: 2rem auto;
  border-radius: 8px;
  padding: 2rem;
}

.search-dropdown__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1.5rem;
}

.search-close {
  background: none;
  border: none;
  cursor: pointer;
  padding: 0.5rem;
}

.search-form {
  display: flex;
  gap: 0.5rem;
  margin-bottom: 1.5rem;
}

.search-form input {
  flex: 1;
  padding: 0.75rem;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.search-form button {
  padding: 0.75rem 1.5rem;
  background: #fd3558;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.search-suggestions {
  padding-top: 1rem;
  border-top: 1px solid #eee;
}

.search-suggestions h3 {
  font-size: 0.875rem;
  margin-bottom: 0.75rem;
  color: #666;
}

.search-suggestions a {
  display: inline-block;
  padding: 0.5rem 1rem;
  margin: 0.25rem;
  background: #f5f5f5;
  border-radius: 20px;
  text-decoration: none;
  color: #333;
}
</style>

<script>
(function() {
  var toggle = document.querySelector('.search-toggle');
  var dropdown = document.querySelector('.search-dropdown');
  var close = document.querySelector('.search-close');
  var overlay = document.querySelector('.search-dropdown__overlay');

  if (!toggle || !dropdown) return;

  toggle.addEventListener('click', function() {
    dropdown.hidden = false;
  });

  if (close) {
    close.addEventListener('click', function() {
      dropdown.hidden = true;
    });
  }

  if (overlay) {
    overlay.addEventListener('click', function() {
      dropdown.hidden = true;
    });
  }
})();
</script>
