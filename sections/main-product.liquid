<header class="section_product-header5">
        <div class="padding-global">
          <div class="container-large">
            <div class="product-header5_component">
              <div class="w-layout-grid product-header5_layout">
                <div class="product-header5_gallery">
                  <a href="#" variation="image" class="product-header5_lightbox-link w-inline-block w-lightbox">
                    <div class="product-header5_main-image-wrapper"><img src="{{ product.featured_image | image_url: width: 1200 }}" loading="lazy" class="product-header5_main-image"></div>
                  </a>
                  <div class="product-header5_list-wrapper hide-tablet">
                    <div class="product-header5_list">
                      {% for image in product.images %}
                      <a href="#" product="images" class="product-header5_lightbox-link w-inline-block w-lightbox">
                        <div class="product-header5_image-wrapper"><img src="{{ image | image_url: width: 300 }}" loading="lazy" class="product-header5_image select-img"></div>
                      </a>
                      {% endfor %}
                    </div>
                  </div>
                </div>
                <div class="product-header5_product-details">
                  <div class="product-header5_breadcrumb">
                    <a href="/" class="breadcrumb-link w-inline-block">
                      <div>Riocapria</div>
                    </a>
                    <div bind="fdb6f852-447c-f283-cd33-3abbf3af2819" class="breadcrumb-divider w-embed"><svg width="16" height="16" viewbox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M6 3L11 8L6 13" stroke="CurrentColor" stroke-width="1.5"></path>
                      </svg></div>
                    <a product="first-collection" href="{{ collection.url }}" class="breadcrumb-link w-inline-block">
                      <div>{{ collection.title }}</div>
                    </a>
                    <div bind="fdb6f852-447c-f283-cd33-3abbf3af281d" class="breadcrumb-divider w-embed"><svg width="16" height="16" viewbox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M6 3L11 8L6 13" stroke="CurrentColor" stroke-width="1.5"></path>
                      </svg></div>
                    <a href="#" class="breadcrumb-link active w-inline-block">
                      <div product="title" class="text-block-6">{{ product.title }}</div>
                    </a>
                  </div>
                  <div class="produto-content">
                    <div class="info-produto-detalhes">
                      <h1 product="title" class="heading-style-h4">{{ product.title }}</h1>
                      <div product="description" class="text-rich-text w-richtext">
                        {{ product.description }}
                      </div>
                    </div>
                    <div class="produto-precos">
                      <div>
                        <div product="title" class="text-preco-antigo is-big">{{ product.compare_at_price | money }}</div>
                        <div product="title" class="text-size-large"><strong>{{ product.price | money }}</strong> à vista</div>
                      </div>
                      <div product="title" class="text-parcelas is-big">ou 6x de R$ 494,60</div>
                    </div>
                    {%- form 'product', product, id: "product-form", class: "form", novalidate: 'novalidate', data-type: 'add-to-cart-form', data-product-form: '' -%}
                      <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}" data-variant-id>

                      <!-- SELETORES DE VARIANTES CUSTOMIZADOS RIOCAPRIA -->
                      {%- for option in product.options_with_values -%}
                        {%- liquid
                          assign option_name = option.name | downcase
                          assign show_selector = false
                          assign selector_type = 'default'

                          # Detectar tipo de seletor baseado no nome da opção
                          if option_name contains 'tamanho' or option_name contains 'size'
                            assign show_selector = true
                            # Verificar se é numérico ou letra
                            assign first_value = option.values.first
                            if first_value == 'A' or first_value == 'B' or first_value == 'C'
                              assign selector_type = 'letters'
                            else
                              assign selector_type = 'numeric'
                            endif
                          endif

                          if option_name contains 'letra' or option_name contains 'letter' or option_name contains 'inicial'
                            assign show_selector = true
                            assign selector_type = 'letters'
                          endif

                          if option_name contains 'tipo de letra' or option_name contains 'fonte' or option_name contains 'font'
                            assign show_selector = true
                            assign selector_type = 'fonts'
                          endif

                          if option_name contains 'cor' or option_name contains 'color' or option_name contains 'pedra' or option_name contains 'stone'
                            assign show_selector = true
                            assign selector_type = 'colors'
                          endif
                        -%}

                        {%- if show_selector -%}
                          {%- case selector_type -%}
                            {%- when 'numeric' -%}
                              {% render 'variant-selector-numeric',
                                product: product,
                                option_name: option.name
                              %}

                            {%- when 'letters' -%}
                              {% render 'variant-selector-letters',
                                product: product,
                                option_name: option.name,
                                show_message: true,
                                custom_message: 'Prazo de 5 dias úteis para peças personalizadas'
                              %}

                            {%- when 'fonts' -%}
                              {% render 'variant-selector-fonts',
                                product: product,
                                option_name: option.name,
                                show_message: true,
                                custom_message: 'Prazo de 5 dias úteis para peças personalizadas'
                              %}

                            {%- when 'colors' -%}
                              {% render 'variant-selector-colors',
                                product: product,
                                option_name: option.name
                              %}
                          {%- endcase -%}
                        {%- endif -%}
                      {%- endfor -%}
                      <!-- FIM SELETORES DE VARIANTES -->

                      <!-- Dados JSON do Produto para JavaScript -->
                      <script type="application/json" data-product-json>
                        {{ product | json }}
                      </script>

                      <div class="option-component">
                        <div class="text-style-allcaps text-color-primary">Quantidade</div>
                        <div option="bg-color" class="quanditade">
                          <div option="bg-color" class="icon-remove"><img loading="lazy" src="{{ 'icon-menos.svg' | asset_url }}" alt="" class="icon-menos"></div>
                          <div class="div-block-12">
                            <input type="number" name="quantity" id="quantity" value="1" min="1" class="input-quantity">
                          </div>
                          <div option="bg-color" class="add-icon-quant"><img loading="lazy" src="{{ 'icon-menos.svg' | asset_url }}" alt="" class="icon-menos"></div>
                        </div>
                      </div>
                      <button type="submit" name="add" class="button-carrinho w-inline-block">
                        <div class="icon-sacola-wrapper"><img src="{{ 'shoppping-bag.svg' | asset_url }}" loading="lazy" alt="" class="icon-sacola"></div>
                        <div class="rt-hover-in-text">Adicionar ao Carrinho</div>
                      </button>
                    {%- endform -%}
                    <div class="infos-uteis">
                      <div class="text-align-center">
                        <div class="infos-uteis-group">
                          <div class="infos-uteis-compra"><img loading="lazy" src="{{ 'delivery.svg' | asset_url }}" alt="" class="icon-vantagens-compra">
                            <div class="text-size-tiny-2">Frete grátis acima de R$ 299,99<br></div>
                          </div>
                          <div class="infos-uteis-compra"><img loading="lazy" src="{{ 'garantido.svg' | asset_url }}" alt="" class="icon-vantagens-compra">
                            <div class="text-size-tiny-2">Garantia vitalícia RIOCAPRIA<br></div>
                          </div>
                          <div class="infos-uteis-compra"><img loading="lazy" src="{{ 'retornar.svg' | asset_url }}" alt="" class="icon-vantagens-compra">
                            <div class="text-size-tiny-2">Troca grátis em 30 dias<br></div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </header>

{% schema %}
{
  "name": "Main Product",
  "settings": []
}
{% endschema %}