    }
  ],
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefício",
      "settings": [
        {
          "type": "html",
          "id": "icon_svg",
          "label": "Ícone SVG"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Título"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtítulo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Institucional Benefits",
      "blocks": [
        {
          "type": "benefit",
          "settings": {
            "title": "Verão Eterno",
